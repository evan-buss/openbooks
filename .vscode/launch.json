  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch OpenBooks Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "cmd/openbooks",
      "args": ["server", "--log", "--tls", "false", "--server", "localhost:6667", "--name", "dev-user"]
    },
    {
      "name": "Launch OpenBooks CLI",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "cmd/openbooks",
      "args": ["cli", "download", "--server", "localhost", "!test"]
    }
  ]
}
